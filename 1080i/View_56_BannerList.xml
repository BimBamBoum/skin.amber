<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="View_56_BannerList">
    <control type="group" description="List">
      <visible>Control.IsVisible(56)</visible>
      <control type="image" description="fa overlay">
        <posx>0</posx>
        <posy>405</posy>
        <width>1920</width>
        <height>675</height>
        <aspectratio>stretch</aspectratio>
        <texture>common/OverlayList.png</texture>
      </control>
      <control type="panel" id="56">
          
		  <visible>Container.Content(TVShows)</visible>
		  <posx>1200</posx>
          <posy>534</posy>
          <width>720</width>
          <height>503</height>
          <onleft>9000</onleft>
          <onright>60</onright>
          <onup>56</onup>
          <ondown>56</ondown>
          <pagecontrol>60</pagecontrol>
          <viewtype label="Banner List">Banner List</viewtype>
          <preloaditems>4</preloaditems>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <itemlayout height="72" width="720">
            <control type="image" description="BG">
              <width>720</width>
              <height>72</height>
              <texture flipy="true" border="3">list/ListNF.png</texture>
            </control>
            <control type="label" description="Main Label">
              <posx>20</posx>
			  <height>72</height>
              <width>660</width>
              <label>$INFO[ListItem.Label]</label>
            </control>
			<include>ListWatchedOverlay</include>
          </itemlayout>
          <focusedlayout height="72" width="720">
            <control type="image" description="BG">
              <width>720</width>
              <height>72</height>
              <texture flipy="true" border="3">list/ListNF.png</texture>
            </control>
			<control type="image" description="BG">
            <posy>3</posy>
			<width>720</width>
            <height>69</height>
            <texture>list/ListFO.png</texture>
		  </control>
		  <control type="label" description="Main Label">
              <posx>20</posx>
			  <height>72</height>
              <width>660</width>
              <textcolor>White2</textcolor>
			  <label>$INFO[ListItem.Label]</label>
            </control>
			<include>ListWatchedOverlay</include>
          </focusedlayout>
        </control>
      <control type="group" description="Banners only">
          <posx>60</posx>
          <posy>531</posy>
          <control type="image" description="Banner">
            <posx>-9</posx>
            <posy>-87</posy>
            <width>1007</width>
            <height>209</height>
            <include>Icon_Fade</include>
            <texture background="true">$VAR[Banner]</texture>
            <include>ThumbBorder</include>
            <aspectratio>keep</aspectratio>
          </control>
		  <control type="group" description="Media info">
            <animation effect="fade" delay="100" time="300">Visible</animation>
            <animation effect="fade" time="0">Hidden</animation>
            <posx>0</posx>
            <posy>0</posy>
			<control type="label" description="Details">
              <posy>141</posy>
              <height>33</height>
              <width>990</width>
              <font>Details</font>
              <label>$VAR[Details]</label>
            </control>
            <control type="textbox" description="Plot51">
              <posx>0</posx>
              <posy>192</posy>
              <width>990</width>
              <height>250</height>
              <label>$VAR[Plots]</label>
            </control>
			<control type="image" description="Stars">
              <posx>-6</posx>
              <posy>464</posy>
              <include>Stars</include>
            </control>
          </control>
        </control>
      <control type="image">
        <visible>Control.HasFocus(60)</visible>
        <include>VisibleFadeEffect</include>
        <posx>28r</posx>
        <posy>534</posy>
        <height>504</height>
        <width>36</width>
        <aspectratio>stretch</aspectratio>
        <texture>OSD/LineScroll2.png</texture>
      </control>
      <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>534</posy>
        <width>36</width>
        <height>504</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>56</onleft>
        <onright>-</onright>
      </control>
    </control>
  </include>
</includes>
