<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="View_55_HalfList">
    <control type="group" description="List">
      <visible>Control.IsVisible(55)</visible>
      <control type="image" description="fa overlay">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <aspectratio>stretch</aspectratio>
        <texture>common/OverlayList.png</texture>
      </control>
      <control type="panel" id="55">
        <!--<visible>![IsEmpty(Container.FolderName) | Container.Content(folders) | Container.Content(files)]</visible>-->
		<posx>800</posx>
        <posy>470</posy>
        <width>1150</width>
        <height>575</height>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>55</onup>
        <ondown>55</ondown>
        <pagecontrol>60</pagecontrol>
        <viewtype label="Infolist">Infolist</viewtype>
        <preloaditems>4</preloaditems>
        <scrolltime tween="sine" easing="inout">280</scrolltime>
       <itemlayout height="72" width="1150">
          <control type="image" description="BG">
            <posx>450</posx>
			<width>660</width>
            <height>72</height>
            <texture flipy="true" border="3">list/ListNF.png</texture>
          </control>
           <control type="label" description="Main Label">
            <posx>465</posx>
            <height>72</height>
            <width>560</width>
			<scroll>false</scroll>
            <label>$INFO[ListItem.Label]</label>
          </control>
		  <control type="image">
            <posx>1060</posx>
            <posy>2</posy>
            <width>24</width>
            <height>72</height>
            <texture>$VAR[Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
        </itemlayout>
        <focusedlayout height="72" width="1150">
          <control type="image" description="BG">
            <posx>450</posx>
			<width>660</width>
            <height>72</height>
            <texture flipy="true" border="3">list/ListNF.png</texture>
          </control>
		  <control type="image" description="BG">
            <posx>450</posx>
			<posy>4</posy>
            <width>660</width>
            <height>67</height>
            <texture>list/ListFO.png</texture>
          </control>
		  <control type="label" description="Main Label">
            <posx>465</posx>
            <height>72</height>
            <width>560</width>
            <label>$INFO[ListItem.Label]</label>
          </control>
		  <control type="image">
            <posx>1060</posx>
            <posy>2</posy>
            <width>24</width>
            <height>72</height>
            <texture>$VAR[Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
        </focusedlayout>
      </control>
      <control type="image">
        <visible>Control.HasFocus(60)</visible>
        <include>VisibleFadeEffect</include>
        <posx>28r</posx>
        <posy>678</posy>
        <height>359</height>
        <width>36</width>
        <aspectratio>stretch</aspectratio>
        <texture>OSD/LineScroll2.png</texture>
      </control>
      <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>678</posy>
        <height>359</height>
        <width>36</width>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>55</onleft>
        <onright>-</onright>
      </control>
    </control>
  </include>
</includes>
