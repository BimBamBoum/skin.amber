	  <control type="image" description="Bottom fade">
        <posx>0</posx>
        <posy>1020</posy>
        <width>1920</width>
        <height>60</height>
        <texture>img/Gradient.png</texture>
        <aspectratio>stretch</aspectratio>
      </control>
